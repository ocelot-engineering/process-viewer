{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-ggdb", // debug
                // "-O2", // release
                // "-DNDEBUG", // release - adds definition of NDEBUG macro to disable asserts.
                "-Werror", // treat warnings as errors
                "-Wall", // more warnings
                "-Weffc++", // more warnings
                "-Wextra", // more warnings
                "-Wconversion", // more warnings
                "-Wsign-conversion", // more warnings
                "-pedantic-errors", // generate errors if code violates strict ISO C and ISO C++
                // "-I{workspaceFolder}/src", // search for user defined header files in this location
                "-std=c++20", // use c++ 20 as the language standard
                "${workspaceFolder}/src/**/*.cpp", // compile all files in src nested
                "${workspaceFolder}/src/*.cpp", // compile all files in src
                "-o",
                "${workspaceFolder}/bin/process-viewer"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
